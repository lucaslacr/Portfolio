---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Expertise from "../components/Expertise.astro";
---

<Layout title="La page n'est plus à cette adresse" description="Page d'erreur 404">
  <div class="fond-sombre">
    <section class="hero-article">
      <div class="colonnes">
        <div class="colonne">
          <h1>La page n'est plus à cette adresse</h1>
          <p class="metadonnee-article"></p>
        </div>
      </div>
    </section>
  </div>
  <main></main>
  <section>
    <div class="colonnes">
      <div class="colonne">
        <img src="/assets/404.svg" alt="" />
      </div>
      <div class="colonne">
        <h2>Comment résoudre cette situation</h2>
        <p>
          La page à peut-être été déplacée ou l'adresse saissie n'est pas la
          bonne. Pour retrouver ce que vous cherchez vous pouvez
        </p>
        <a class="primaire" href="https://lucaslacroix.com/"
          >Revenir à l'accueil</a
        >
      </div>
    </div>
  </section>
  <style>
    a.primaire {
      background-color: var(--primaire-mauve);
      color: var(--texte-blanc);
      padding: 12px 16px;
      border-radius: 8px;
      margin-top: 16px;
      width: fit-content;
      display: block;
      text-align: center;
      max-width: 400px;
    }
  </style>
</Layout>
